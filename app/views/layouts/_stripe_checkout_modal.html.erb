<form action="/billings/generate_payment" method="POST">
  <script src="https://checkout.stripe.com/checkout.js"
      class="stripe-button"
      data-key="<%= Rails.application.secrets.stripe_public_key %>"
      data-amount="2000"
      data-email="<%= current_user&.email %>"
      data-name="ComboSnacks"
      data-allow-remember-me="false"
      data-panel-label="Pagar {{amount}}"
      data-label="Confirmar Pedido"
      data-currency="CLP"
      data-image="/assets/logo-xs.png">
  </script>
</form>
